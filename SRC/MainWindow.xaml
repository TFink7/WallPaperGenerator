<Window x:Class="WallPaperGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WallPaperGenerator"
        mc:Ignorable="d"
        Title="" Height="224" Width="348">

    <DockPanel>
        <!-- Title -->
        <TextBlock DockPanel.Dock="Top" Text="Wallpaper Generator" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>

        <!-- Buttons -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">
            <UniformGrid Rows="1" Columns="2" HorizontalAlignment="Center" 
                         Margin="0,0,0,10">
                <Button Content="Generate Wallpaper" Command="{Binding GenerateWallpaperCommand}" Margin="5" Padding="10,5"/>
                <Button Content="View Past Images" Command="{Binding ViewPastImagesCommand}" Margin="5" Padding="10,5"/>
            </UniformGrid>

            <!-- Custom Button Centered Below -->
            <Button Content="Custom" Command="{Binding CustomCommand}" Margin="5" Padding="10,5" Width="120" HorizontalAlignment="Center"/>
        </StackPanel>
    </DockPanel>
</Window>
