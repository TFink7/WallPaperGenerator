<UserControl x:Class="WallPaperGenerator.Views.InitialView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="Wallpaper Generator" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0">
            <UniformGrid Rows="2" Columns="2" HorizontalAlignment="Center">
                <Button Content="Generate Wallpaper" Command="{Binding GenerateWallpaperCommand}" Margin="5" Padding="10,5"/>
                <Button Content="View Past Images" Command="{Binding DataContext.ViewPastImagesCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Margin="5" Padding="10,5"/>
                <Button Content="Custom" Command="{Binding CustomCommand}" Margin="5" Padding="10,5"/>
                <Button Content="Save Location" Command="{Binding SaveLocationCommand}" Margin="5" Padding="10,5"/>
            </UniformGrid>
        </StackPanel>
    </DockPanel>
</UserControl>